<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.0//EN" "http://www.opensymphony.com/xwork/xwork-1.0.dtd">

<xwork>
	<package name="connectbook" extends="webwork-default" 
		externalReferenceResolver="com.atlassian.xwork.ext.SpringServletContextReferenceResolver">
		<interceptors>
			<interceptor name="reference-resolver"
				class="com.opensymphony.xwork.interceptor.ExternalReferencesInterceptor" />
			<interceptor-stack name="WSStack">
				<interceptor-ref name="model-driven" />		
				<interceptor-ref name="validationWorkflowStack" />
				<interceptor-ref name="timer" />
				<interceptor-ref name="params" />
				<interceptor-ref name="reference-resolver" />
			</interceptor-stack>

			<interceptor-stack name="WSStack_Online">			
				<interceptor-ref name="validationWorkflowStack" />
				<interceptor-ref name="timer" />
				<interceptor-ref name="params" />
				<interceptor-ref name="model-driven" />
				<interceptor-ref name="reference-resolver" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="defaultStack" />
		<action name="connectbook" class="org.project.ww.ConnectBook">
			<external-ref name="connectBookDao">connectBookDao</external-ref>
			<result name="default" type="dispatcher">
				<param name="location">/connectbook/index.jsp</param>
			</result>
			<result name="userlist" type="dispatcher">
				<param name="location">/connectbook/userlist.jsp</param>
			</result>
			<result name="adduser" type="dispatcher">
				<param name="location">/connectbook/adduser.jsp</param>
			</result>
			<result name="edituser" type="dispatcher">
				<param name="location">/connectbook/edituser.jsp</param>
			</result>
			<result name="typelist" type="dispatcher">
				<param name="location">/connectbook/typelist.jsp</param>
			</result>
			<result name="addtype" type="dispatcher">
				<param name="location">/connectbook/addtype.jsp</param>
			</result>
			<result name="edittype" type="dispatcher">
				<param name="location">/connectbook/edittype.jsp</param>
			</result>
			<result name="adduser" type="dispatcher">
				<param name="location">/connectbook/adduser.jsp</param>
			</result>
			<result name="adduser_false" type="dispatcher">
				<param name="location">/connectbook/adduser.jsp</param>
			</result>
			<result name="action_false" type="dispatcher">
				<param name="location">/connectbook/error.jsp</param>
			</result>
			<interceptor-ref name="WSStack" />
		</action>
	</package>
</xwork>